{
    "name": "Video Player Controller Mover",
    "description": "User can move the video controls to another spot on the screen",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["js/content.js"]
        }
    ],
    "permissions": ["storage", "activeTab", "scripting", "declarativeContent", "webNavigation", "tabs"],
    "host_permissions": ["https://www.youtube.com/*"],
    "action": {
        "default_title": "Video Player Controller Mover"
    },
    "icons": {
        "48": "/images/video_player_icon.png",
        "128": "/images/video_player_icon.png"
      }
  }