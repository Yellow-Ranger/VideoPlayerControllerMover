{
    "name": "Video Player Controller Mover",
    "description": "User can move the video controls to another spot on the screen",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
        "resources": ["js/inject-script.js"],
        "matches": ["https://www.youtube.com/*"]
        }
    ],
    "permissions": ["tabs", "activeTab", "scripting", "webNavigation", "storage"],
    "host_permissions": ["https://www.youtube.com/*"],
    "action": {
        "default_title": "Video Player Controller Mover",
        "default_popup": "html/popup.html"
    },
    "icons": {
        "48": "/images/video_player_icon.png",
        "128": "/images/video_player_icon.png"
      }
  }